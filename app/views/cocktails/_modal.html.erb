    <!-- Modal -->
    <div class="modal fade" id="delete_ingredient" tabindex="-1" role="dialog" aria-labelledby="myLabel">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myLabel">Which element do you want to delete ?</h4>
          </div>
          <div class="modal-body">
              <% @cocktail.doses.each do |dose| %>
                <li><%= dose.description %> <%= dose.ingredient.name %>
                <%= link_to cocktail_dose_path(@cocktail, dose), class: "button", method: :delete do %>
                  <i class="fa fa-trash-o" aria-hidden="true"></i>
                <% end %>
              <% end %>
              <br>
            <%= link_to root_path(@cocktail), method: :delete, class: "button", data: {confirm: "Are you sure you want to delete the cocktail?"} do %>
              <p>Remove the entire cocktail</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
