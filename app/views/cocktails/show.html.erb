<div class="container">
  <div class="row">
    <div class="content col-xs-12 col-sm-3">

      <h1><%= @cocktail.name %></h1>
      <h3>Composition:</h3>
      <ul>
        <% @cocktail.doses.each do |dose| %>
          <li><%= dose.description %> <%= dose.ingredient.name %>
        <% end %>
      </ul>
      <%= render "cocktails/modal" %>
      <%= link_to cocktails_path do %>
          <i class="fa fa-arrow-left" aria-hidden="true"></i>
      <% end %>
    </div>

    <div class="col-xs-12 col-sm-6 image_container">
      <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-8">
      <%= render "doses/doses_form" %>
    </div>
  </div>
</div>
