<h1>Here are all cocktails:</h1>

<div class="row">
  <% @cocktails.each do |cocktail|%>
    <div class="col-xs-12 col-sm-6">
      <%= link_to cocktail_path(cocktail) do %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path "test.jpg" %>');">
        <div class="card-description">
          <h2><%= cocktail.name %></h2>
        </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
